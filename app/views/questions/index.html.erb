
<%if @questions.empty? %>
  <div class="card">
    <div class="card-header">
    <p>No Questions... please add</p>
    </div>
  </div>
<%else%>
  <% @questions.each do |question| %>
    <div class="card">
      <div class="card-header">
        <%= link_to question.question, question %>
      </div>
    </div>
  <% end %>
<% end %>