<h3 class='text-center'>Adding New question</h3>
<div class='row'>
  <div class='col-md-12'>
    <% if @question.errors.any? %>
    <div class="alert alert-danger col-md-offset-1" role="alert">
        <h2 class="alert-heading">
        <%= pluralize(@question.errors.count, "error") %>
        prohibited this question from being asked </h2>
        <div class="panel-body">
          <ul>
            <% @question.errors.full_messages.each do |msg| %>
            <hr>
            <li>
              <%= msg %>
            </li>
            <% end %>
          </ul>
        </div>
    </div>
    <% end %>
    <%= form_for(@question, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class='form-group'>
      <div class='control-label col-md-1'>
      </div>
      <div class='col-md-11'>
        <%= f.text_area :body, rows: 10, class: 'form-control', placeholder: 'Your question...' %>
      </div>
    </div>
    <div class='form-group'>
      <div class='col-md-offset-1 col-md-11'>
        <%= f.submit 'Ask question', class: 'btn btn-primary btn-lg float-right' %>
      </div>
    </div>
    <% end %>
  </div>
</div>