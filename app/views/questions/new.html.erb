<h3 class='text-center'>Adding New question</h3>
<div class='row'>
  <div class='col-md-12'>
    <%= form_for(@question, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class='form-group'>
      <div class='control-label col-md-1'>
        <%= f.label :body %>
      </div>
      <div class='col-md-11'>
        <%= f.text_area :body, rows: 10, class: 'form-control', placeholder: 'Your question' %>
      </div>
    </div>
    <div class='form-group'>
      <div class='col-md-offset-1 col-md-11'>
        <%= f.submit 'Ask question', class: 'btn btn-primary btn-lg float-right' %>
      </div>
    </div>
    <% end %>
  </div>
</div>